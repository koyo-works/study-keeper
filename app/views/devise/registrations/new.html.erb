<div class="top-wrapper">
  <div class="top-inner-text">
    <h1>ユーザー登録</h1>
  </div>

  <div class="top-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <!-- ユーザー名 -->
      <div class="mb-3">
        <%= f.label :name, "ユーザー名", class: "form-label" %>
        <%= f.text_field :name,
              autofocus: true,
              autocomplete: "name",
              class: "form-control #{'is-invalid' if resource.errors[:name].any?}" %>

        <% if resource.errors[:name].any? %>
          <div class="invalid-feedback d-block">
            <%= resource.errors[:name].first %>
          </div>
        <% end %>
      </div>

      <!-- メールアドレス -->
      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email,
              autocomplete: "email",
              class: "form-control #{'is-invalid' if resource.errors[:email].any?}" %>

        <% if resource.errors[:email].any? %>
          <div class="invalid-feedback d-block">
            <%= resource.errors[:email].first %>
          </div>
        <% end %>
      </div>

      <!-- パスワード -->
      <div class="mb-3">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password,
              autocomplete: "new-password",
              class: "form-control #{'is-invalid' if resource.errors[:password].any?}" %>

        <% if resource.errors[:password].any? %>
          <div class="invalid-feedback d-block">
            <%= resource.errors[:password].first %>
          </div>
        <% end %>
      </div>

      <!-- パスワード確認 -->
      <div class="mb-3">
        <%= f.label :password_confirmation, "パスワード(確認用)", class: "form-label" %>
        <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              class: "form-control #{'is-invalid' if resource.errors[:password_confirmation].any?}" %>

        <% if resource.errors[:password_confirmation].any? %>
          <div class="invalid-feedback d-block">
            <%= resource.errors[:password_confirmation].first %>
          </div>
        <% end %>
      </div>

      <!-- 送信 -->
      <div class="text-center mt-4">
        <%= f.submit "今すぐ始める", class: "btn btn-success btn-lg" %>
      </div>

    <% end %>
  </div>
</div>
